{
    "compilerOptions": {
        "declaration": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedDeclarations": true,
        "isolatedModules": true,
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "outDir": "./dist",
        "paths": {
            "@/*": ["./src/*"]
        },
        "resolveJsonModule": true,
        "rootDir": "./src",
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "target": "ESNext",
        "types": ["bun-types"]
    },
    "exclude": ["node_modules", "**/*.test.ts"],
    "include": ["src/**/*"]
}
